<div id='global-container'>
  <div id="container">
    <div class="cover"></div>
    <header>
      <a href='#' >
        <div class="title-box">
          <i class="far fa-newspaper"></i>
          <h1>Coody.com</h1>
          <p>ただの暇つぶしサイト</p>
        </div>
      </a>
      <nav class="desktop-menu">
        <ul class="desktop-menu__main">
          <li class="desktop-menu__item">
            <a href="/sns/index">
              <span class="main-title1">SNS</span>
              <span class="sub-title">メディアで情報発信中</span>
            </a>
